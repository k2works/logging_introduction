LoadModule passenger_module <%= @params[:passenger_module] %>
<IfModule mod_passenger.c>
  PassengerRoot <%= @params[:passneger_root] %>                             
  PassengerDefaultRuby <%= @params[:passenger_default_ruby] %>
</IfModule>

# Deploying a Ruby on Rails application: an example

# Suppose you have a Rails application in /somewhere. Add a virtual host to
# your Apache configuration file and set its DocumentRoot to /somewhere/public:
#

RackEnv <%= @params[:rails_env] %>

<VirtualHost *:80>
   ServerName <%= @params[:server_name] %>
   DocumentRoot  <%= @params[:docroot] %>
   <Directory <%= @params[:docroot] %>>
      Allow from all
      Options -MultiViews
   </Directory>
</VirtualHost>
